class BaseClass {
    public:
        BaseClass(int value) {
            this.value = value;
        }

        int getValue() {
            return this.value;
        }

    protected:
        int value;
}

class DerivedClass : BaseClass {
    public:
        DerivedClass(int value) {
            super.BaseClass(2 * value)
        }

        void setValue(int value) {
            this.value = value;
        }
}